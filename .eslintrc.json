{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
		"@bartoszosn/personal"
    ],
    "overrides": [
		{
			"files": "*.vue",
			"parser": "vue-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser",
				"sourceType": "module"
			}
		}
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ]
}
